<div>
  <h2 class="text-lg font-bold pb-4"><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="habit-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">

    <%= label f, :name, class: "w-32 inline-block text-right p-2" %>
    <%= text_input f, :name %>
    <%= error_tag f, :name %>

    <div>
      <%= submit "Save", phx_disable_with: "Saving...", class: "text-blue-500 underline" %>
    </div>
  </.form>
</div>
